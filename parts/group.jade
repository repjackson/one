template(name='tribes')
    .ui.stackable.padded.grid
        .sixteen.wide.column
            .ui.inline.header 
                +i name='campfire'
                |#{tribe_docs.count}
                |tribes
            if currentUser
                a.ui.icon.circular.button.add_tribe(title='add')
                    i.plus.green.large.icon
            // .ui.left.icon.search.small.input
            //     i.search.icon.refresh_tags
            //     input#search_tag.prompt(type='text' autocomplete="off" placeholder='tags')
            // if selected_tag_plural
            //     .ui.icon.circular.black.compact.button.clear_picked_tags
            //         i.remove.icon
            each picked_tribe_tags
                button.ui.blue.compact.circular.small.button.unpick_tribe_tag(tabindex='0')
                    //- i.remove.icon
                    | #{this}
            each tribe_tag_results
                button.ui.circular.compact.basic.small.button.zoomer.pick_tribe_tag(tabindex="0" class=result_class title=count)
                    |#{name}
                    //- small #{count}
            span.sorting_row
                .ui.icon.input
                    i.search.icon
                    input.search_tribe(type='text' placeholder='search...' value=current_tribe_search)
                |sort by
                .ui.compact.small.menu
                    .ui.simple.dropdown.item
                        strong #{current_tribe_sort_label}
                        i.dropdown.icon
                        .menu
                            +set_sort_key key='member_ids' label='$/serving' icon='money'
                            +set_sort_key key='private' label='available' icon='clock'
                            +set_sort_key key='_timestamp' label='added' icon='clock'
                            +set_sort_key key='comment_count' label='comment count' icon='chat'
                .ui.compact.icon.circular.button.set_sort_direction(title='toggle sort direction')
                    if sorting_up
                        i.sort.amount.down.icon
                    else
                        i.sort.amount.up.icon
                |&nbsp;
            +session_set key='view_mode' value='grid' icon='th'
            +session_set key='view_mode' value='list' icon='list'
        .sixteen.wide.column
            if session_is 'view_mode' 'grid'
                if one_result
                    .ui.stackable.one.cards.scrolling
                        each tribe_docs
                            +tribe_card
                else
                    .ui.stackable.three.cards.scrolling
                        each tribe_docs
                            +tribe_card
            if session_is 'view_mode' 'list'
                .ui.selection.divided.animated.list.scrolling
                    each tribe_docs 
                        +tribe_item
        
template(name='tribe_card')
    .ui.card.zoomer
        if image_id
            a.image.zoomer.fly_right(href="/tribe/#{_id}")
                img.ui.image(src="{{c.url image_id width=600 height=600}}")
        .content
            a.ui.header.zoomer.fly_right(href="/tribe/#{_id}")
                |#{title}
            |#{member_ids.length} members
            .smallscroll
                |!{description}
            //+ismall name='tags' cl='ui inline image'
            each seven_tags
                a.ui.basic.small.link.label.pick_tribe_tag_flat.zoomer(title='pick tag') #{this}
            a.zoomer(href="/tribe/#{_id}")
                i.chevron.right.large.circular.icon
            // if is_admin
            //     .ui.small.header slug: #{slug}
            if can_edit
                a.ui.circular.icon.button(href="/tribe/#{_id}/edit")
                    i.pencil.blue.icon
            +print_this
                    
template(name='tribe_item')
    .item
        if image_id
            a.zoomer(href="/tribe/#{_id}")
                img.ui.small.rounded.inline.image(src="{{c.url image_id width=300 height=300}}")
        a.ui.inline.header.zoomer.fly_right(href="/tribe/#{_id}")
            |#{title}
        |#{member_ids.length} members
        // .smallscroll
        //     |!{description}
        //+ismall name='tags' cl='ui inline image'
        each seven_tags
            a.ui.basic.small.label.pick_tribe_tag_flat #{this}
        if location 
            i.red.marker.icon 
            |#{location}
        // a.zoomer(href="/tribe/#{_id}")
        //     i.chevron.right.large.circular.icon
        // if is_admin
        //     .ui.small.header slug: #{slug}
        // if can_edit
        //     a.ui.circular.icon.button(href="/tribe/#{_id}/edit")
        //         i.pencil.blue.icon
        if currentUser.admin_mode
            +print_this
        a.ui.basic.icon.circular.button(href="/tribe/#{_id}")
            i.chevron.right.large.icon                    


