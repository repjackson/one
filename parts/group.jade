            img.ui.image(src="{{c.url image_id width=200 height=200}}")
            |#{title}


template(name='tribe_edit')
    with current_doc
        .ui.stackable.padded.grid
            .three.column.row
                .column
                    .ui.header 
                        i.pencil.icon
                        |edit tribe
                    a.ui.big.icon.fluid.green.button.fly_up(href="/tribe/#{_id}" title='save')
                        i.checkmark.large.icon
                    +delete_button
                    +image_edit key='image_id' label='image'
                .column 
                    +text_edit key='title' icon='header'
                    +html_edit key='body' label='body' icon='content'
                .column
                    // +single_user_edit key='leader_id' label='leader' icon='crown'
                    +multi_user_edit key='leader_ids' label='leaders' icon='crown'
                    +array_edit key='tags' label='tags' icon='tags'
                    +array_edit key='location_tags' label='location tags' icon='marker'
                    +text_edit key='contact_info' label='contact info' icon='info'
                    +multi_user_edit key='member_ids' label='members'
                    +boolean_edit key='private' label='private'
                    +link_edit key='link' label='link'
                .column
                    .ui.header 
                        i.cubes.icon
                        |modules
                    +boolean_edit key='has_checkin' label='checkin' icon='clock'
                    +boolean_edit key='has_shop' label='shop' icon='shop'
                    +boolean_edit key='has_posts' label='posts' icon='blog'
                    
                    
template(name='tribe_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    .ui.header 
                        if icon
                            +i name=icon
                        |#{title}
                    a.ui.circular.button.fly_right(href="/tribes")
                        i.left.chevron.icon
                        +i name='campfire' cl='ui mini inline image'
                        |tribes
                    if can_edit
                        a.ui.circular.icon.button(href="/tribe/#{_id}/edit")
                            i.setting.large.icon
                            +i name='settings'
                    +image_view key='image_id' icon='image' label='image'
                    +array_view key='tags' icon='tags'
                    .spacer
                    if link
                        a.ui.circular.button(href=link target='_window')
                            i.external.icon
                            |#{link}
                        .spacer
                    div
                    if address
                        a.ui.compact.circular.button(href=address_link target='_window')
                            i.marker.icon
                            |#{address}
                    +viewing
                    if in_dev 
                        +print_this
                .twelve.wide.column
                    .ui.two.column.grid 
                        .column
                            .ui.inline.header
                                +i name='info'
                                |about
                            .content
                                +html_view key='body' icon='content' label='description'
                                if watson 
                                    +watson_view
                        .column
                            .content
                                if leaders_id
                                    .ui.inline.header 
                                        // +i name='crown' cl='ui avatar image'
                                        i.crown.icon
                                        |leaders: 
                                    each leader_ids 
                                        +user_info
                                div
                                .ui.inline.header 
                                    +i name='tribes'
                                    |#{member_ids.length} members
                                +multi_user_view key='member_ids' label='members'
                                each member_ids
                                    +user_info
                                // .ui.large.selection.animated.list
                                        // a.item(href="/tribe/#{_id}/#{username}")
                                        //     img.ui.mini.image(src="{{c.url image_id width=200 height=200}}")
                                        //     .content
                                        //         .header
                                        //             |#{username}
                                if currentUser
                                    +doc_array_togggle key='member_ids' value=currentUser._id add_label='join' remove_label='leave'
                                else 
                                    a.ui.big.button(href="/login")
                                        +i name='internal'
                                        |join
                        .column
                            .ui.inline.header
                                +i name='rss'
                                |activity
                            .content
                                each log_items
                                    +log_item
                                .ui.header 
                                    // +i name='line-chart'
                                    i.large.line.chart.icon
                                    |stats
                                i.refresh.link.icon.refresh_tribe_stats
                                .ui.large.list
                                    .item #{member_count} members
                                    .item #{events} events
                                    .item #{events} events
                                    // .item #{dish_count} dishes
                                    // .item #{total_credit_exchanged} credits exchanged
                                +comments
                        .column
                            .ui.inline.header
                                +i name='calendar' 
                                |events
                            if currentUser 
                                .ui.icon.button.add_tribe_event(title='add tribe event')
                                    i.plus.icon
                            .content
                                .ui.link.animated.list
                                    each tribe_events
                                        a.item(href="/event/#{_id}") 
                                            img.ui.avatar.image(src="{{c.url image_id width=200 height=200}}")
                                            .content
                                                .header #{title}
                                                .description
                                                    if is_repeating
                                                        i.refresh.icon
                                                        |every #{repeating_day}
                                                    if start_datetime
                                                        |{{from_now start_datetime}}
                        .column
                            .ui.inline.header
                                +i name='blog'
                                |tribe posts
                            .content
                                if currentUser 
                                    .ui.icon.button.add_tribe_post(title='add tribe post')
                                        i.plus.icon
                                .ui.large.link.animated.list
                                    each tribe_posts
                                        a.item(href="/post/#{_id}")
                                            img.ui.avatar.image(src="{{c.url image_id width=200 height=200}}")
                                            |#{title}
                            if has_shop
                                +tribe_shop
                        .column 
                            +qr_code
                            
                            
